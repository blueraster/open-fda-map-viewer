.root
.app
    height 100%

.app
    position relative

    &__panel
        font-size .75em
        width 440px
        position absolute
        right 20px
        bottom 20px
        background-color transparent
        z-index 9

.app-chart
    bottom 20px
    left 20px
    height 200px
    width 500px

.popup
    position absolute
    width 100%
    height 100%

    &__image
        padding 20px

    &__closeIcon
        position absolute
        right 0
        top 0
        padding inherit
        cursor pointer

    &__film
        position absolute
        width 100%
        height 100%
        z-index 99
        opacity .6
        z-index 9
        background-color #3C3C3C
    &__inner
        padding 15px
        z-index 1050
        position fixed
        width 500px
        transform translate3d(-50%, -50%, 0)
        top 50%
        left 50%
        background-color white
        border-radius 5px


