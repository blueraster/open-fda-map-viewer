.root
.app
    height 100%

.app
    position relative

    &__panel-container
        font-size .75em

    &__panel
        &, &--dark
            border-top-left-radius 20px
            border-top-right-radius 20px

        &--dark
            background-color rgba(0,0,0,.5)
            color white
            text-shadow 1px 2px black

        &__half
            vertical-align top
            padding 10px
            width 600px

        &__header
            padding 20px
            border-bottom 5px solid rgba(0,0,0,.5)

        &__half:nth-child(3)
            border-left 5px solid rgba(0,0,0,.5)

.app-chart
    height 150px
    width 550px

.popup
    position absolute
    width 100%
    height 100%
    &__foodControls
        color black

    &__image
        padding 20px

    &__closeIcon
        position absolute
        right 0
        top 0
        padding inherit
        cursor pointer

    &__film
        position absolute
        width 100%
        height 100%
        z-index 99
        opacity .8
        z-index 99
        background-color #3C3C3C
    &__inner
        padding 15px
        z-index 1050
        position fixed
        width 500px
        height 450px
        margin 0 auto
        top 20%
        bottom 0
        left 0
        right 0
        background-color white
        border-radius 5px

.legend
    color white
    background-color rgba(0,0,0,.5)
    top 20px
    right 70px
    padding 15px


